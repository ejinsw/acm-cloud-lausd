# WebSocket server env (DynamoDB-backed)

AWS_REGION=us-west-1
PORT=9999

# Required DynamoDB tables
ROOMS_TABLE_NAME=
ROOM_MEMBERS_TABLE_NAME=
ROOM_MESSAGES_TABLE_NAME=
USER_SESSIONS_TABLE_NAME=

# Optional: DynamoDB Local endpoint (disables DAX automatically)
# DYNAMODB_ENDPOINT=http://localhost:8000

# Optional: DAX accelerator endpoint (uses amazon-dax-client)
# DAX_ENDPOINT=your-dax-cluster-endpoint:8111

# Optional: force-disable DAX even if DAX_ENDPOINT is set
# DISABLE_DAX=1

SESSION_IDLE_TIMEOUT_MS=1800000
MAX_SESSION_TTL_MS=86400000
